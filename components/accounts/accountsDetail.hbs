<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-body row">
            {{#detail}}
            <div class="col-5 text-center d-flex align-items-center justify-content-center">
                <div class="">
                    <img src="/img/users/{{Avatar}}" alt="" />
                </div>
            </div>
            <div class="col-7">
                <h5><strong>ID</strong></h5>
                <p class="text-muted">{{ID}}</p>
                <h5><strong>Họ Tên</strong></h5>
                <p class="text-muted">{{HoTen}}</p>
                <h5><strong>Tài Khoản</strong></h5>
                <p class="text-muted">{{TaiKhoan}}</p>
                <h5><strong>Địa Chỉ</strong></h5>
                <p class="text-muted">{{DiaChi}}</p>
                <h5><strong>Ngày Sinh</strong></h5>
                <p class="text-muted">{{DOB}}</p>
                <h5><strong>Email</strong></h5>
                <p class="text-muted">{{Email}}</p>
                <h5><strong>Điện Thoại</strong></h5>
                <p class="text-muted">{{Phone}}</p>
                <h5><strong>Chức Vụ</strong></h5>
                <p class="text-muted">{{ChucVu}}</p>
                <h5><strong>Trạng Thái</strong></h5>
                <p class="text-muted">{{TrangThai}}</p>
            </div>
            {{/detail}}
        </div>
    </div>

</section>
<!-- /.content -->